datasource db {
  provider = "sqlite" // Use SQLite como provedor
  url      = env("DATABASE_URL") // A URL do banco de dados vem do .env
}

generator client {
  provider = "prisma-client-js" // Gera o cliente Prisma
}

model Expense {
  id          Int      @id @default(autoincrement())
  description String
  category    String
  amount      Float
  date        DateTime
  type        String
  
}



model Category {
  id   Int    @id @default(autoincrement())
  name String @unique
}